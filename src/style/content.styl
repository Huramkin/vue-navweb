.content
    position: absolute
    top: 134px
    bottom: 20px
    left: 0
    right: 0
.all
    width: 100%
    height: 100%
    padding 0 0 20px 0
.tb-cell
    display: table-cell

$c-width = 1000px
$m-r = 10px
$m-l = 20px
.center
    display: table-cell
    width: $c-width
    background-color: #fafafa
    padding: 0 0 10px 0
.edit
    float: right
    margin: 10px 20px 5px 0
    opacity: 0.7
    span 
        margin: 0 5px 0 5px
        cursor: pointer
.web-group
    display: table
    width: $c-width
    margin: 2px 0 0 2px
.web-des
    display: table-cell
    width: ($c-width*10/100)
    background-color: #c0c0c0
    text-align: center
    vertical-align: middle
    cursor: move
.webs 
    display: table-cell
    width: ($c-width*90/100)
.web-fav
    height: 16px;
    width: 16px;
    margin: 0 3px 0 0
    position: relative;
    left: 5px;
    top: 2px;
.li-drag
    min-width: ($c-width*90/600 - $m-r)
    height: 21px
    margin: 10px $m-r 10px $m-l
    cursor: move
    
.drag
    opacity: 0.4
.over-left
    border-left: 2px solid blue
.over-top
    border-top: 2px solid blue

.opacity 
    opacity: 0.6
    cursor: pointer

.modal 
    display: none
    position: fixed
    z-index: 1
    padding-top: 100px
    left: 0
    top: 0
    width: 100%
    height: 100%
    overflow: auto
    background-color: rgb(0,0,0)
    background-color: rgba(0,0,0,0.4)
    a
        text-decoration: underline

.modal-content 
    background-color: #fefefe
    margin: auto
    padding: 20px
    border: 1px solid #888
    width: 600px

.close 
    color: #aaaaaa
    float: right
    font-size: 28px
    font-weight: bold

.close:hover,
.close:focus 
    color: #000
    cursor: pointer
.input_normal
    width: 80px
    height: 25px
.input_long
    width: 300px
    height: 25px
.input_btn
    width: 50px
    height: 27px